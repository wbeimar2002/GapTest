
@{
    ViewData["Title"] = "Appointments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <script src="~/js/appointments.js"></script>
}

<div class="row">
    <h2>View Appointments</h2>
    <div class="table-responsive">
        <table id="appointmentTable" class="table table-condensed table-striped">
            <thead>
                <tr>
                    <th>Patient</th>
                    <th>Date</th>
                    <th>Speciality</th>
                    <th>Cancel</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
<div class="row">
    <h2>Create Appointments</h2>
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <label for="patientList">Patient</label>
                    <select id="patientList" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label for="appointmentDate">Date</label>
                    <input type="datetime-local" id="appointmentDate" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="specialtyList">Specialty</label>
                    <select id="specialtyList" class="form-control"></select>
                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-xs-3">
                        <button type="button" id="addButton" class="btn btn-default" onclick="addClick();">Add</button>
                    </div>
                    <div class="col-xs-3">
                        <button type="button" id="clearButton" class="btn btn-default" onclick="clearClick();">Clear Form</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

